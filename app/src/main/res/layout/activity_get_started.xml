<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".getStarted">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_weight="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="60dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Welcome back,"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="NAME"/>

                </LinearLayout>
                <ImageView
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/personimagenew"/>
            </LinearLayout>

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- ImageView for the background image -->
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/commaimage"
                    android:layout_gravity="top|start"
                    android:scaleType="fitStart" />

                <!-- TextView to appear on top of the image -->
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/textView"
                    android:lineSpacingExtra="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="“The soul always knows what to do to heal itself. The challenge is to silence the mind.”"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:layout_gravity="top|start"
                    android:padding="4dp"
                    android:textColor="@android:color/black" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text=" - by Caroline Myss"
                android:textAlignment="textEnd"
                android:textSize="16dp"
                android:padding="4dp"
                android:textColor="@android:color/black" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:layout_gravity="center"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dotsIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal|center_vertical"
                android:padding="0dp"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="200dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/color4"
                    android:layout_marginLeft="10dp"/>
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        app:cardCornerRadius="20dp"
                        android:layout_marginBottom="5dp"
                        app:cardBackgroundColor="@color/color4"
                        android:layout_marginLeft="10dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@color/color4"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EXPLORE"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textAlignment="textStart"/>

            <HorizontalScrollView
                android:scrollbars="none"
                android:scrollIndicators="none"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="200dp">

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="510dp"
                    android:layout_height="200dp"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        app:cardElevation="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="200dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="20dp">
                        <LinearLayout
                            android:paddingBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/explorecardbg"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="YOGA"
                                    android:textSize="22dp"
                                    android:textStyle="bold"
                                    android:textColor="#777777"/>
                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:src="@drawable/yoga"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:text="Click Here"
                                android:gravity="bottom"
                                android:layout_gravity="bottom"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        app:cardElevation="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="200dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="20dp">
                        <LinearLayout
                            android:paddingBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/explorecardbg"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="DIET"
                                    android:textSize="22dp"
                                    android:textStyle="bold"
                                    android:textColor="#777777"/>
                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:src="@drawable/diet"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:text="Click Here"
                                android:gravity="bottom"
                                android:layout_gravity="bottom"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        app:cardElevation="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="200dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="20dp">
                        <LinearLayout
                            android:paddingBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/explorecardbg"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="BMI"
                                    android:textSize="22dp"
                                    android:textStyle="bold"
                                    android:textColor="#777777"/>
                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:src="@drawable/bmi"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:text="Click Here"
                                android:gravity="bottom"
                                android:layout_gravity="bottom"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>


    <androidx.cardview.widget.CardView
        android:layout_weight="0.8"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        app:cardElevation="5dp"
        android:layout_margin="0dp"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bottomnavbarbg">

            <ImageView
                android:id="@+id/tab1img"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="0.8"
                android:src="@drawable/tab1white"
                android:visibility="gone" />

            <androidx.cardview.widget.CardView
                android:id="@+id/tab1card"
                android:layout_width="0dp"
                android:visibility="visible"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_weight="0.8"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/home"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Home"
                        android:layout_weight="2"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@color/black"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/tab2img"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:visibility="visible"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/tab2white"
                android:layout_marginLeft="5dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/tab2card"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_weight="0.8"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/home"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Home"
                        android:layout_weight="2"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@color/black"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/tab3img"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:visibility="visible"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/tab3white"
                android:layout_marginLeft="5dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/tab3card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:visibility="gone"
                android:layout_weight="0.8"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/home"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Home"
                        android:layout_weight="2"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@color/black"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/tab4img"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:visibility="visible"
                android:src="@drawable/tab4white"
                android:layout_marginLeft="5dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/tab4card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_weight="0.8"
                android:visibility="gone"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="12dp"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/home"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Home"
                        android:layout_weight="2"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@color/black"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>