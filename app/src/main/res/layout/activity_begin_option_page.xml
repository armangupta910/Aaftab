<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color1"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".beginPage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Moksha"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="60dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        >
        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/beginimagebelow"/>

        <ImageView
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/optionpageimage"/>


    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:textSize="18dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:lineSpacingExtra="10dp"
        android:text=" It's not about being good at something. It's about being good to yourself. "
        android:textColor="@color/color2"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/roundbuttonbglogin"
            android:text="Login"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:background="@drawable/roundbuttonbgregister"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Register"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="skip"
        android:textColor="@color/color2"
        android:textAlignment="center"/>

</LinearLayout>
